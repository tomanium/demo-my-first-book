        <!-- Q15 -->
        <exercise>
            <statement>
                <p>
                    求 <m>\lim\limits _{x \rightarrow 1}\left(\frac{x}{x-1}-\frac{1}{\ln x}\right)</m>.
                </p>
            </statement>
            <answer>
                <p>
                    解:
                    <me>
                    \begin{aligned}
                    \lim _{x \rightarrow 1}\left(\frac{x}{x-1}-\frac{1}{\ln x}\right)  &amp; \xlongequal{\infty-\infty} \lim_{x \rightarrow 1} \frac{x \ln x-x+1}{(x-1) \ln x}\left(\frac{0}{0}\right) \\
                    &amp; =\lim _{x \rightarrow 1} \frac{x \ln x-x+1}{(x-1)^{2}} \xlongequal{\frac{0}{0}} \lim _{x \rightarrow 1} \frac{\ln x}{2(x-1)}=\lim _{x \rightarrow 1} \frac{x-1}{2(x-1)^{2}}=\frac{1}{2} .
                    \end{aligned}
                    </me>
                </p>
            </answer>
        </exercise>

        <!-- Q16 -->
        <exercise>
            <statement>
                <p>
                    求 <m>\lim\limits _{x \rightarrow 0}\left(\frac{1}{x}-\frac{1}{\mathrm{e}^{x}-1}\right)</m>.
                </p>
