        <!-- Q20 -->
        <exercise>
            <statement>
                <p>
                    <m>\lim\limits_{x \rightarrow 0}\left(x+2^{x}\right)^{\frac{2}{x}}</m>
                </p>
            </statement>
            <answer>
                <p>
                    <me>
                        \begin{aligned}
