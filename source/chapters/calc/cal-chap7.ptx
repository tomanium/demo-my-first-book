        <!-- Q1 -->
        <exercise>
            <statement>
                <p>
                    设三个向量  <m> \boldsymbol{a}, \boldsymbol{b}, \boldsymbol{c} </m>  满足关系式  <m> \boldsymbol{a}+\boldsymbol{b}+\boldsymbol{c}=\mathbf{0} </m> , 则  <m> \boldsymbol{a} \times \boldsymbol{b}=( ) </m> .
                </p>
            </statement>
            <choices>
                <choice>
                    <statement>
                        <p>
                            <m>  \boldsymbol{c} \times \boldsymbol{b}  </m>
                        </p>
                    </statement>
                </choice>
                
                <choice correct="yes">
                    <statement>
                        <p>
                            <m>  \boldsymbol{b} \times \boldsymbol{c}  </m> 
                        </p>
                    </statement>
                </choice>

                <choice>
                    <statement>
                        <p>
                            <m>  \boldsymbol{a} \times \boldsymbol{c}  </m> 
                        </p>
                    </statement>
                </choice>

                <choice>
                    <statement>
                        <p>
                            <m>  \boldsymbol{b} \times \boldsymbol{a}  </m>
                        </p>
                    </statement>
                </choice>
            
            </choices>
            
			<answer>
                	<p>
                        解  <m> \boldsymbol{a} \times \boldsymbol{b}=(-\boldsymbol{b}-\boldsymbol{c}) \times \boldsymbol{b}=-\boldsymbol{b} \times \boldsymbol{b}-\boldsymbol{c} \times \boldsymbol{b}=\boldsymbol{b} \times \boldsymbol{c} </m> , 选  <m> \mathrm{B} </m> . 
                	</p>
          	</answer>
		</exercise>




        <!-- Q2 -->
        <exercise>
            <statement>
                <p>
                    设  <m> \boldsymbol{a}, \boldsymbol{b}, \boldsymbol{c} </m>  都是单位向量, 且  <m> \boldsymbol{a}+\boldsymbol{b}+\boldsymbol{c}=\mathbf{0} </m> , 则  <m> \boldsymbol{a} \cdot \boldsymbol{b}+\boldsymbol{b} \cdot \boldsymbol{c}+\boldsymbol{c} \cdot \boldsymbol{a}=(\mathrm{C}) </m> . 
                </p>
            </statement>
            <choices>
                <choice>
                    <statement>
                        <p>
                            <m> 0 </m> 
                        </p>
                    </statement>
                </choice>
                
                <choice>
                    <statement>
                        <p>
                            <m> 3 </m> 
                        </p>
                    </statement>
                </choice>

                <choice correct="yes">
                    <statement>
                        <p>
                            <m> -\frac{3}{2} </m> 
                        </p>
                    </statement>
                </choice>

                <choice>
                    <statement>
                        <p>
                            <m> \frac{1}{3} </m>
                        </p>
                    </statement>
                </choice>
            
            </choices>
            
			<answer>
                	<p>
                        解  
                        <me> \begin{aligned}
                            \because 0 &amp; =(\boldsymbol{a}+\boldsymbol{b}+\boldsymbol{c}) \cdot(\boldsymbol{a}+\boldsymbol{b}+\boldsymbol{c})\\ &amp; =|\boldsymbol{a}|^{2}+|\boldsymbol{b}|^{2}+|\boldsymbol{c}|^{2} +2(\boldsymbol{a} \cdot \boldsymbol{b}+\boldsymbol{b} \cdot \boldsymbol{c}+\boldsymbol{c} \cdot \boldsymbol{a})\\ &amp; =3+2(\boldsymbol{a} \cdot \boldsymbol{b}+\boldsymbol{b} \cdot \boldsymbol{c}+\boldsymbol{c} \cdot \boldsymbol{a}), \\
                            \end{aligned}
                       </me>  </p> 
                      
                       <p>  <m> \therefore \boldsymbol{a} \cdot \boldsymbol{b}+\boldsymbol{b} \cdot \boldsymbol{c}+\boldsymbol{c} \cdot \boldsymbol{a}=-3 / 2 </m> . 
                	</p>
          	</answer>
		</exercise>


        <!-- Q3 -->
        <exercise>
            <statement>
                <p>
                    设  <m> \vec{a}, \vec{b} </m>  都是非零向量, 且  <m> |\vec{b}|=1,(\widehat{\vec{a}, \vec{b}})=\frac{\pi}{3} </m> , 求
                    <me> 
                    \lim _{x \rightarrow 0} \frac{|\vec{a}+x \vec{b}|-|\vec{a}|}{x} \text {. }
                    </me> 
                </p>
            </statement>
            <answer>
                <p>
                    <me> 
                        \begin{aligned}
                         &amp;  \lim _{x \rightarrow 0} \frac{|\vec{a}+x \vec{b}|-|\vec{a}|}{x}=\lim _{x \rightarrow 0} \frac{|\vec{a}+x \vec{b}|^{2}-|\vec{a}|^{2}}{x(|\vec{a}+x \vec{b}|+|\vec{a}|)} \\
                        =  &amp;  \lim _{x \rightarrow 0} \frac{(\vec{a}+x \vec{b}) \cdot(\vec{a}+x \vec{b})-\vec{a} \cdot \vec{a}}{x(|\vec{a}+x \vec{b}|+|\vec{a}|)}=\lim _{x \rightarrow 0} \frac{2 \vec{a} \cdot \vec{b}+x \vec{b} \cdot \vec{b}}{|\vec{a}+x \vec{b}|+|\vec{a}|} \\
                        =  &amp;  \frac{2 \vec{a} \cdot \vec{b}}{|\vec{a}|+|\vec{a}|}=\frac{|\vec{a}||\vec{b}| \cos \frac{\pi}{3}}{|\vec{a}|}=1 \times \frac{1}{2}=\frac{1}{2}.
                        \end{aligned}
                         </me> 
                </p>
            </answer>
        </exercise>

        <!-- Q4 -->
        <exercise>
            <statement>
                <p>
                    设  <m> (a \times b) \cdot c=2 </m> , 则  <m> [(a+b) \times(b+c)] \cdot(c+a)= </m>
                </p>
            </statement>
            <answer>
                <p>
                    解: 已知  <m> (a \times b) \cdot c=2 \Rightarrow\left|\begin{array}{lll}a_{1}  &amp;  a_{2}  &amp;  a_{3} \\ b_{1}  &amp;  b_{2}  &amp;  b_{3} \\ c_{1}  &amp;  c_{2}  &amp;  c_{3}\end{array}\right|=2 </m> 
                <me> 
                \begin{aligned}
                (a+b) \times(b+c) &amp; =a \times b+a \times c+b \times b+b \times c\\ &amp; =(a+b) \times(b+c)\\ &amp; =a \times b+a \times c+b \times c \\
                [(a+b) \times(b+c)] \cdot(c+a) &amp; =(a \times b) \cdot c+(a \times c) \cdot c+(b \times c) \cdot c \\ &amp; +(a \times b) \cdot a+(a \times c) \cdot a+(b \times c) \cdot a
                \end{aligned}
                </me> 
                <me> 
                (b \times c) \cdot a=\left|\begin{array}{lll}
                b_{1}  &amp;  b_{2}  &amp;  b_{3} \\
                c_{1}  &amp;  c_{2}  &amp;  c_{3} \\
                a_{1}  &amp;  a_{2}  &amp;  a_{3}
                \end{array}\right| \xlongequal { 行交换两次 }\left|\begin{array}{lll}
                a_{1}  &amp;  a_{2}  &amp;  a_{3} \\
                b_{1}  &amp;  b_{2}  &amp;  b_{3} \\
                c_{1}  &amp;  c_{2}  &amp;  c_{3}
                \end{array}\right|
                </me> 
                </p>
            </answer>
        </exercise>

