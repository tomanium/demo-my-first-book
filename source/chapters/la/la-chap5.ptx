    <subsection>
        <title>正定二次型</title>    
        
        <exercises xml:id="exercises-la5_5">
            <title>练习题</title>   
            <!-- Q21 -->
                <exercise>
                    <statement>
                        <p>
                            下列矩阵中, 正定矩阵是   <m> (\quad) </m>
                        </p>
                    </statement>
                    <choices>
                        <choice>
                            <statement>
                                <p>
                                    <me> 
                                        (A)=\left(\begin{array}{ccc}
                                        1  &amp;  2  &amp;  1 \\
                                        2  &amp;  5  &amp;  0 \\
                                        1  &amp;  0  &amp;  -3
                                        \end{array}\right)</me>
                                </p>
                            </statement>
                        </choice>
                        
                        <choice>
                            <statement>
                                <p>
                                    <me>
                                        (B)=\left(\begin{array}{lll}
